// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS
enum Role {
  OWNER
  ADMIN
  MEMBER
}

// MODELS

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash argon2/bcrypt
  name      String?
  
  // Auditoria
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relacionamentos
  workspaces WorkspaceMember[]
  aiLogs      AiLog[]

  @@map("users")
}

model Workspace {
  id          String   @id @default(uuid())
  name        String
  description String?
  
  // Auditoria
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  members     WorkspaceMember[]
  campaigns Campaign[]
  aiLogs      AiLog[]
  integrations Integration[]
  
  @@map("workspaces")
}

enum CampaignObjective {
  AWARENESS
  TRAFFIC
  SALES
  LEADS
}

model Campaign {
  id          String            @id @default(uuid())
  name        String
  objective   CampaignObjective
  description String?           
  
  // Multi-tenancy: Toda campanha pertence a um workspace
  workspaceId String
  workspace   Workspace         @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  // Auditoria: Quem criou?
  createdBy   String
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([workspaceId])
  @@map("campaigns")
}

// Tabela Pivô (Many-to-Many) com metadados (Role)
model WorkspaceMember {
  id          String    @id @default(uuid())
  role        Role      @default(MEMBER)
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())

  @@unique([userId, workspaceId]) // Um usuário não pode entrar 2x no mesmo workspace
  @@index([userId])
  @@index([workspaceId])
  @@map("workspace_members")
}

model AiLog {
  id           String   @id @default(uuid())
  workspaceId  String
  userId       String
  
  provider     String   // ex: "GEMINI", "OPENAI"
  model        String   // ex: "gemini-2.0-flash"
  type         String   // ex: "COPY_GENERATION"
  
  inputTokens  Int      // O que você enviou
  outputTokens Int      // O que a IA respondeu
  totalTokens  Int
  
  createdAt    DateTime @default(now())

  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@map("ai_logs")
}

model Integration {
  id           String   @id @default(uuid())
  workspaceId  String
  
  provider     String   // ex: "META", "GOOGLE"
  externalId   String   // ID do usuário lá no Facebook
  name         String   // ex: "Conta de Anúncios da Trax"
  
  accessToken  String   @db.Text // Token Criptografado
  refreshToken String?  @db.Text
  
  status       String   @default("ACTIVE") // ACTIVE, EXPIRED, ERROR
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  // Garante que não duplique a mesma conta no mesmo workspace
  @@unique([workspaceId, provider, externalId])
  @@map("integrations")
}