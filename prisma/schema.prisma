// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS GLOBAIS ---

enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum CampaignObjective {
  AWARENESS
  TRAFFIC
  SALES
  LEADS
}

// Novos Enums para o fluxo profissional
enum CampaignStatus {
  DRAFT               // Rascunho (Preenchendo estratégia)
  GENERATING_STRATEGY // IA criando ganchos
  WAITING_APPROVAL    // Usuário escolhendo
  GENERATING_ASSETS   // IA criando imagens/vídeos
  COMPLETED           // Pronto para baixar
  PUBLISHED           // No Ar
}

enum AdPlatform {
  META      // Facebook/Instagram
  GOOGLE
  LINKEDIN
}

// --- MODELS DE USUÁRIO E ORGANIZAÇÃO ---

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash argon2
  name      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relacionamentos
  workspaces WorkspaceMember[]
  aiLogs     AiLog[]

  @@map("users")
}

model Workspace {
  id          String   @id @default(uuid())
  name        String
  description String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  members      WorkspaceMember[]
  campaigns    Campaign[]
  aiLogs       AiLog[]
  integrations Integration[]
  
  @@map("workspaces")
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  role        Role      @default(MEMBER)
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())

  @@unique([userId, workspaceId])
  @@index([userId])
  @@index([workspaceId])
  @@map("workspace_members")
}

// --- MODELS PRINCIPAIS (O "Coração" do SaaS) ---

model Campaign {
  id          String            @id @default(uuid())
  name        String
  
  // --- Estratégia ---
  objective   CampaignObjective
  platform    AdPlatform        @default(META)
  
  // Inputs da IA (O "Prompt" estruturado)
  targetAudience String?  @db.Text // Quem é o público?
  keyBenefits    String?  @db.Text // Quais os benefícios?
  brandTone      String?           // Tom de voz específico desta campanha
  
  // --- Controle ---
  status      CampaignStatus @default(DRAFT)
  description String?

  // --- Relacionamentos ---
  workspaceId String
  workspace   Workspace         @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdBy   String // ID do usuário que criou
  
  // Os resultados gerados (Variações de anúncios)
  adCreatives AdCreative[]
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([workspaceId])
  @@map("campaigns")
}

model AdCreative {
  id          String   @id @default(uuid())
  
  name        String   // ex: "Variação 1 - Foco em Dor"
  
  // --- Ativos Gerados (Outputs) ---
  imageUrl    String?  @db.Text // URL pública do R2/S3
  videoUrl    String?  @db.Text // URL do vídeo (futuro)
  
  headline    String?  @db.Text // Título do anúncio
  primaryText String?  @db.Text // Texto principal (Copy)
  
  // --- Metadados ---
  aiModel     String?  // ex: "imagen-3.0"
  isSelected  Boolean  @default(false) // Usuário escolheu esse?
  
  // --- Publicação ---
  facebookAdId String? // ID retornado pela API do Meta após publicar

  // Relacionamento
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt // Adicionado para rastreio

  @@index([campaignId])
  @@map("ad_creatives")
}

// --- LOGS E INTEGRAÇÕES ---

model AiLog {
  id           String   @id @default(uuid())
  workspaceId  String
  userId       String
  
  provider     String   // ex: "GEMINI", "GOOGLE_IMAGEN"
  model        String   // ex: "gemini-2.0-flash"
  type         String   // ex: "COPY_GENERATION", "IMAGE_GENERATION"
  
  inputTokens  Int
  outputTokens Int
  totalTokens  Int
  
  createdAt    DateTime @default(now())

  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@map("ai_logs")
}

model Integration {
  id           String   @id @default(uuid())
  workspaceId  String
  
  provider     String   // ex: "META"
  externalId   String   // ID da conta no Facebook
  name         String   // Nome da conta
  
  accessToken  String   @db.Text // Criptografado
  refreshToken String?  @db.Text
  
  status       String   @default("ACTIVE")
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, provider, externalId])
  @@map("integrations")
}